---
import stateConfig from '~@/slate.config';
import type { ThemeOptions } from '@/typings/config';
import ThemeSelect from '@/components/theme-select';
import SocialLinks from '@/components/social-links';
import slateConfig from '~@/slate.config';

interface Props {
  copyright?: string;
}

const { copyright = stateConfig.footer?.copyright } = Astro.props;
---

<footer class="mt-auto">
  {!!slateConfig.socialLinks && <SocialLinks client:visible />}
  {/* 友情链接区域 */}
  <div class="mt-4 border-t border-slate-200 dark:border-slate-800 pt-4">
    <div class="text-slate8 font-medium mb-2">友情链接</div>
    <div class="flex flex-wrap gap-3">
      <a href="https://shadowrocket.uk" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">小火箭客户端</a>
      <a href="https://clash-verge-rev.org" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">clash客户端</a>
      <a href="https://jichangliebiao.com/guide/clashmi.html" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">clash mi</a>
      <a href="https://3mao.bid" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">3毛机场</a>
      <a href="https://kxsw.bid" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">1元机场</a>
      <a href="https://mojie.uk" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">魔戒机场</a>
      <a href="https://baokemeng.bid" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">宝可梦机场</a>
      <a href="https://taoqitu.uk" target="_blank" rel="noopener noreferrer" class="text-sm text-slate7 hover:text-primary transition-colors">淘气兔机场</a>
    </div>
  </div>
  <div class="mt-4 flex items-center justify-between">
    <div class="text-slate8 text-sm">{copyright}</div>
    {/* S theme selection */}
    {(stateConfig.theme as ThemeOptions).enableUserChange && <ThemeSelect client:visible />}
    {/* E theme selection */}
  </div>
</footer>
